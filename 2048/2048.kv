BoxLayout:
    orientation: 'horizontal'
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 1/7
            Button:
                size_hint_x: 1/6
                background_color: (1, 1, 1, 1)
            Button:
                text: 'Up'
                on_release: app.move('up')
            Button:
                size_hint_x: 1/6
                background_color: (1, 1, 1, 1)
        BoxLayout:
            orientation: 'horizontal'
            Button:
                text: 'Left'
                on_release: app.move('left')
                size_hint_x: 1/6
            BoxLayout:
                orientation: 'vertical'
                BoxLayout:
                    orientation: 'horizontal'
                    id: row_0
                BoxLayout:
                    orientation: 'horizontal'
                    id: row_1
                BoxLayout:
                    orientation: 'horizontal'
                    id: row_2
                BoxLayout:
                    orientation: 'horizontal'
                    id: row_3
            Button:
                text: 'Right'
                on_release: app.move('right')
                size_hint_x: 1/6
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 1/7
            Button:
                size_hint_x: 1/6
                background_color: (1, 1, 1, 1)
            Button:
                text: 'Down'
                on_release: app.move('down')
            Button:
                size_hint_x: 1/6
                background_color: (1, 1, 1, 1)
        TextInput:
            size_hint_y: 1/7
            on_text: app.move('key')
            id: text